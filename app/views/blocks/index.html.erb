<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Blocks</h1>
  </div>

  <div id="new_block">
    <%= render partial: "blocks/form", locals: {block: Block.new} %>
  </div>

  <div id="blocks" class="min-w-full">
    <% @blocks.each do |block|%>
      <%= render block %>
    <%end%>
  </div>
</div>
