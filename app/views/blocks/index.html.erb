<div class="w-full flex flex-col">

  <div class="flex items-center w-auto justify-center">
    <h1 class="font-bold text-4xl text-center">Bitcoin data</h1>
  </div>

  <div id="new_block" style="text-align:center">
    <%= render partial: "blocks/form", locals: {block: Block.new} %>
  </div>

  <div id="blocks" style="margin:0px auto">
    <% @blocks.each do |block|%>
      <%= render block %>
    <%end%>
  </div>
  <div style="margin:0px auto; margin-top:3px;">
    <%== pagy_nav(@pagy) %>
  </div>
</div>
