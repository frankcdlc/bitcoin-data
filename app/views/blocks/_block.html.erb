<div id="<%= dom_id block %>">
  <div data-controller="modal">
    <div data-controller="dropdown">
      <div style= "display: flex" style="align-items:center">
        <p style= "border: 2px solid black; width: 630px" class="rounded-md"><%= block.hash_block %></p>
        <p>
          <button data-action="click->dropdown#openDropdown" data-dropdown-target="openButton" style="height:30px; border:2px solid black" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold rounded-md">
            <%= image_tag("down-arrow.png", :width => 20, :height => 20) %>
          </button>
          <button data-action="click->dropdown#closeDropdown" data-dropdown-target="closeButton" style="height:30px; border: 2px solid black" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold rounded-md">
            <%= image_tag("up-arrow.png", :width => 20, :height => 20) %>
          </button>
        </p>
        <%= button_to "DELETE", block, method: :delete, data: { action: "click->modal#delete" }, style: "height: 30px", class:"justify-items-start bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded" %>
        
      </div>
      <div data-dropdown-target="dropdownContent" class="border border-black w-[630px] rounded-md">
        <p class="my-0.5">
          <strong class="font-medium mb-1">hash:</strong>
          <%= block.hash_block %>
        </p>

        <p class="my-0.5">
          <strong class="font-medium mb-1">prev_block:</strong>
          <%= block.prev_block %>
        </p>

        <p class="my-0.5">
          <strong class="font-medium mb-1">block_index:</strong>
          <%= block.block_index %>
        </p>

        <p class="my-0.5">
          <strong class="font-medium mb-1">time:</strong>
          <%= block.time %>
        </p>

        <p class="my-0.5">
          <strong class="font-medium mb-1">bits:</strong>
          <%= block.bits %>
        </p>
      </div>
    </div>
  </div>

</div>
