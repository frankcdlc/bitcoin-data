<div id="<%= dom_id block %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Hash block:</strong>
    <%= block.hash_block %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Prev block:</strong>
    <%= block.prev_block %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Block index:</strong>
    <%= block.block_index %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Time:</strong>
    <%= block.time %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Bits:</strong>
    <%= block.bits %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this block", block, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this block', edit_block_path(block), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
